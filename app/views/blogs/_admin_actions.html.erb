<% if logged_in?(:site_admin) %>
  <nav class="breadcrumb blogcrumb">
  <%= link_to font_blog_awesome(blog.status), toggle_status_blog_path(blog), style: blog_status_color(blog) %>
  <%= link_to font_blog_awesome('edit'), edit_blog_path(blog) %>
  <%= link_to font_blog_awesome('delete'), blog, method: :delete, data: { confirm: 'Are you sure?' } %>
  </nav>
<% end %>