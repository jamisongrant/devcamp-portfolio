<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-1">
        <%= gravatar_helper comment.user %>
        </div>

          <div class="col-md-11">
          <%= comment.content %>

          <div class='comment-attribution'>
        Comment posted by <span class="comment-name"><%= comment.user.first_name %></span> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
          </div>
        <%= link_to font_blog_awesome('delete'), comment.id., method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } if logged_in?(:site_admin) %>
        </div>
      </div>
    </div>
  </div>
</div>